@model IEnumerable<TaskDistributionSystem.Models.Islem>
@{ ViewData["Title"] = "İşlemler"; }
<h2 class="mb-3">İşlemler</h2>
<p><a class="btn btn-primary" asp-action="Create">Yeni İşlem</a></p>
<table class="table table-striped table-bordered">
  <thead><tr><th>Ad</th><th>Zorluk</th><th style="width:220px;">İşlemler</th></tr></thead>
  <tbody>
  @foreach (var item in Model)
  {
    <tr>
      <td>@item.Ad</td>
      <td>@item.Zorluk</td>
      <td>
        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
      </td>
    </tr>
  }
  </tbody>
</table>
