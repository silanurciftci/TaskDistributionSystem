@model IEnumerable<TaskDistributionSystem.Models.Gorev>
@{ ViewData["Title"] = "Görevler"; }
<h2>Görevler</h2>
<p><a class="btn btn-primary" asp-action="Create">Yeni Görev</a></p>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Ad</th><th>Tarih</th><th>İşlem</th><th>Zorluk</th><th>Personel</th>
      <th style="width:220px;">İşlemler</th>
    </tr>
  </thead>
  <tbody>
  @foreach (var g in Model)
  {
    <tr>
      <td>@g.Ad</td>
      <td>@g.Tarih.ToString("yyyy-MM-dd")</td>
      <td>@g.Islem?.Ad</td>
      <td>@g.Islem?.Zorluk</td>
      <td>@(g.Personel != null ? g.Personel.Ad + " " + g.Personel.Soyad : "-")</td>
      <td>
        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@g.Id">Detay</a>
        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@g.Id">Düzenle</a>
        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@g.Id">Sil</a>
      </td>
    </tr>
  }
  </tbody>
</table>
