@model TaskDistributionSystem.Models.Gorev
@{ ViewData["Title"] = "Görev Sil"; }
<h2>Görev Sil</h2><hr/>
<h5>Bu kaydı silmek istediğinize emin misiniz?</h5>
<dl class="row">
  <dt class="col-sm-2">Ad</dt><dd class="col-sm-10">@Model.Ad</dd>
  <dt class="col-sm-2">İşlem</dt><dd class="col-sm-10">@Model.Islem?.Ad</dd>
</dl>
<form asp-action="Delete" method="post">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Sil</button>
  <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>
